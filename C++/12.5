void CMy125Dlg::OnBnClickedButton3()
{
	if (m_nCol > 0)
	{
		int count;
		count = m_listCtrl.GetItemCount();
		UpdateData();
		m_listCtrl.InsertItem(count, m_item1);
		if (m_nCol > 1)
			m_listCtrl.SetItemText(count, 1, m_item2);
		if (m_nCol > 2)
			m_listCtrl.SetItemText(count, 2, m_item3);
	}
}

